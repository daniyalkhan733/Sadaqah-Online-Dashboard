---
const {CharityName} = Astro.props;

---


<div class="flex flex-col space-y-4">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between">
        <h1 class="text-xl md:text-2xl font-bold">{`${CharityName} Dashboard`}</h1>
        <div class="flex space-x-3 mt-4 md:mt-0">
            <div class="flex items-center border-2 border-gray-400 bg-white pr-1 rounded-xl">
                <span class="p-2">
                    <img src="/assets/svg/search.svg" alt="" class="w-8 p-1" />
                </span>
                <input type="text" placeholder="Search..." class="w-full p-3 rounded-r border-0 focus:outline-none bg-inherit"/>
            </div>
            <button class="p-2 bg-white rounded-full shadow-md hover:bg-indigo-50 focus:outline-none">
                <img src="/assets/svg/setting.svg" alt="" class="w-8 p-1"/>
            </button>
            <button class="p-2 bg-white rounded-full shadow-md hover:bg-indigo-50 focus:outline-none">
                <img src="/assets/svg/notification.svg" alt="" class="w-8 p-1 "/>
            </button>
        </div>
    </div>

    <!-- Breadcrumb -->
   
</div>